{
    "name": "Smol Course Development Environment",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "forwardPorts": [
      8888
    ],
    "features": {
      "ghcr.io/va-h/devcontainers-features/uv:1": {}
    },
    "customizations": {
      "vscode": {
        "settings": {
          "python.defaultInterpreterPath": "/usr/local/bin/python"
        },
        "extensions": [
          "ms-python.python",
          "ms-python.pylint",
          "ms-python.flake8",
          "ms-python.black-formatter",
          "njpwerner.autodocstring",
          "matangover.mypy",
          "ms-python.autopep8",
          "ms-toolsai.jupyter",
          "ms-toolsai.vscode-jupyter-powertoys",
          "ms-toolsai.jupyter-hub"
        ]
      }
    },
    "postCreateCommand": "uv venv && uv pip sync requirements.txt"
  }